		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"globals": "^16.1.0",
		"jsdom": "^26.1.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.52.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"storybook": "^8.6.14",
		"svelte": "^5.33.1",
		"svelte-check": "^4.2.1",
		"taze": "^19.1.0",
		"typescript": "^5.8.3",
